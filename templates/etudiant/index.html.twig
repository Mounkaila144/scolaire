{% extends 'base.html.twig' %}

{% block title %}Etudiant index{% endblock %}

{% block body %}
   <div class="card">
    <div class="card-header">
        <h3 class="card-title mb-0">Etudiant</h3>
    </div>
    <div class="card-body">
        <table id="scroll-horizontal" class="table nowrap align-middle card-li table-datatable" style="width:100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Numero</th>
                <th>Telephone</th>
                <th>Fillier</th>
                <th>Scolariter payer</th>
                <th>Inscription payer</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for etudiant in etudiants %}
            <tr>
                <td>{{ etudiant.id }}</td>
                <td>{{ etudiant.nom }}</td>
                <td>{{ etudiant.prenom }}</td>
                <td>{{ etudiant.numero }}</td>
                <td>{{ etudiant.telephone }}</td>
                <td>{{ etudiant.fillier.nom }}</td>
                <td>{{ etudiant.scolariterPayer }}</td>
                <td>{{ etudiant.inscriptionPayer ? 'Yes' : 'No' }}</td>
                <td>
                    <div class="dropdown d-inline-block">
                        <button class="btn btn-soft-secondary btn-sm dropdown" type="button"
                                data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="ri-more-fill align-middle"></i>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a href="{{ path('app_etudiant_edit', {'id': etudiant.id}) }}" class="dropdown-item edit-item-btn"><i
                                            class="ri-pencil-fill align-bottom me-2 text-muted"></i> Editer</a>
                            </li>
                            <li>
                                <a href="{{ path('app_etudiant_delete', {'id': etudiant.id}) }}" class="dropdown-item remove-item-btn">
                                    <i class="ri-delete-bin-fill align-bottom me-2 text-muted"></i> Delete
                                </a>
                            </li>
                        </ul>
                    </div>

                </td>

            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
   </table>
        </div>
    </div>

    {{ encore_entry_script_tags('datatable') }}

{% endblock %}
