{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
    <div class="container-fluid">

        <div class="row">
            <div class="col">

                <div class="h-100">
                    <div class="row mb-3 pb-1">
                        <div class="col-12">
                            <div class="d-flex align-items-lg-center flex-lg-row flex-column">
                                <div class="flex-grow-1">
                                    <h4 class="fs-16 mb-1">
                                    </h4>
                                    <p class="text-muted mb-0"></p>
                                </div>
                                <div class="mt-3 mt-lg-0">
                                    <form action="javascript:void(0);">
                                        <div class="row g-3 mb-0 align-items-center">
                                            <!--end col-->
                                            <div class="col-auto">
                                                <div class="btn-group">
                                                    <button type="button" class="btn btn-primary">Promotions</button>
                                                    <button type="button"
                                                            class="btn btn-primary dropdown-toggle dropdown-toggle-split"
                                                            data-bs-toggle="dropdown" aria-haspopup="true"
                                                            aria-expanded="false"></button>
                                                    <div class="dropdown-menu">
                                                        {% for promotion in promotions %}
                                                            <a class="dropdown-item"
                                                               href="{{ path("app_admin",{"pro":promotion.annee|date('Y') }) }}">{{ promotion.annee ? promotion.annee|date('Y-m-d') : '' }}</a>
                                                        {% endfor %}
                                                    </div>
                                                </div><!-- /btn-group -->
                                            </div>
                                            <!--end col-->
                                            <div class="col-auto">
                                                <button type="button"
                                                        class="btn btn-soft-info btn-icon waves-effect waves-light layout-rightside-btn">
                                                    <i class="ri-pulse-line"></i></button>
                                            </div>
                                            <!--end col-->
                                        </div>
                                        <!--end row-->
                                    </form>
                                </div>
                            </div><!-- end card header -->
                        </div>
                        <!--end col-->
                    </div>
                    <!--end row-->

                    {% for fillier in filliers %}
                        <div class="row">
                            <div class="col-xl-12">
                                <div class="card">
                                    <div class="card-header border-0 align-items-center d-flex">
                                        <h4 class="card-title mb-0 flex-grow-1">{{ fillier.nom }}</h4>
                                        <div>
                                            <button type="button" class="btn btn-soft-secondary btn-sm">
                                                ALL
                                            </button>
                                            <button type="button" class="btn btn-soft-secondary btn-sm">
                                                1M
                                            </button>
                                            <button type="button" class="btn btn-soft-secondary btn-sm">
                                                6M
                                            </button>
                                            <button type="button" class="btn btn-soft-primary btn-sm">
                                                1Y
                                            </button>
                                        </div>
                                    </div><!-- end card header -->

                                    <div class="card-header p-0 border-0 bg-soft-light">
                                        <div class="row g-0 text-center">
                                            <div class="col-6 col-sm-1">
                                                <div class="p-3 border border-dashed border-start-0">
                                                    <h5 class="mb-1"><span class="counter-value"
                                                                           data-target="{{ fillier.etudiants.count }}">0</span>
                                                    </h5>
                                                    <p class="text-muted mb-0">Etudiants</p>
                                                </div>
                                            </div>
                                            <!--end col-->
                                            <div class="col-6 col-sm-2">
                                                <div class="p-3 border border-dashed border-start-0">
                                                    <h5 class="mb-1"><span class="counter-value"
                                                                           data-target="{{ fillier.scolariterApayer }}">0</span>CFA
                                                    </h5>
                                                    <p class="text-muted mb-0">Scolariter</p>
                                                </div>
                                            </div>
                                            <!--end col-->
                                            <div class="col-6 col-sm-2">
                                                <div class="p-3 border border-dashed border-start-0">
                                                    <a class="btn btn-primary" href="{{ path('app_presence_index', {'fil':fillier.id,'pro':pro}) }}">Faire une liste des Presence</a>
                                                </div>
                                            </div>
                                            <div class="col-6 col-sm-2">
                                                <div class="p-3 border border-dashed border-start-0">
                                                    <a class="btn btn-danger" href="{{ path('app_etudiant_fillier', {'id':fillier.id,'pro':pro}) }}">Liste des Etudiants</a>
                                                </div>
                                            </div>
                                            <!--end col-->
                                            <div class="col-6 col-sm-2">
                                                <div class="p-3 border border-dashed border-start-0 border-end-0">
                                                    <h5 class="mb-1 text-success"><span class="counter-value"
                                                                                        data-target="18.92">0</span>%
                                                    </h5>
                                                    <p class="text-muted mb-0">pourcentage de payement</p>
                                                </div>
                                            </div>
                                            <!--end col-->
                                            <!--end col-->
                                            <div class="col-6 col-sm-2">
                                                <div class="p-3 border border-dashed border-start-0 border-end-0">
                                                    <h5 class="mb-1 text-success"><span class="counter-value"
                                                                                        data-target="18.92">0</span>%
                                                    </h5>
                                                    <p class="text-muted mb-0">pourcentage d'Absence</p>
                                                </div>
                                            </div>
                                            <!--end col-->
                                            <!--end col-->
                                            <div class="col-6 col-sm-1">
                                                <div class="p-3 border border-dashed border-start-0 border-end-0">
                                                    <h5 class="mb-1 text-success">{{ pro}}
                                                    </h5>
                                                    <p class="text-muted mb-0">Promotion</p>
                                                </div>
                                            </div>
                                            <!--end col-->

                                        </div>
                                    </div><!-- end card header -->

                                    <div class="card-body p-0 pb-2">
                                        <div class="w-100">
                                            <div id="customer_impression_charts"
                                                 data-colors='["--vz-primary", "--vz-success", "--vz-danger"]'
                                                 class="apex-charts" dir="ltr"></div>
                                        </div>
                                    </div><!-- end card body -->
                                </div><!-- end card -->
                            </div><!-- end col --><!-- end col -->
                        </div>
                    {% endfor %}


                </div> <!-- end .h-100-->

            </div> <!-- end col -->

        </div>

    </div>

{% endblock %}
