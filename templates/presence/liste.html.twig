{% extends 'base.html.twig' %}

{% block title %}Etudiant index{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-header">
            <h3 class="card-title mb-0">Etudiant</h3>
        </div>
        <div class="card-body">
            <table id="scroll-horizontal" class="table nowrap align-middle card-li table-datatable" style="width:100%">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Liste</th>
                    <th>Date</th>
                    <th>Fillier</th>
                    <th>Promotion</th>
                    <th>actions</th>
                </tr>
                </thead>
                <tbody>
                {% for presence in presences %}
                    <tr>
                        <td>{{ presence.id }}</td>
                        <td><a class="btn btn-success" href="{{ path("app_presence_liste_etudiant",{"id":presence.id}) }}"> listes</a></td>
                        <td>{{ presence.date ? presence.date|date('Y-m-d H:i:s') : '' }}</td>
                        <td>{{ presence.fillier.nom }}</td>
                        <td>{{ presence.promotion.annee|date('Y') }}</td>
                        <td>
                            <a href="{{ path('app_presence_show', {'id': presence.id}) }}">show</a>
                            <a href="{{ path('app_presence_edit', {'id': presence.id}) }}">edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    {{ encore_entry_script_tags('datatable') }}

{% endblock %}
