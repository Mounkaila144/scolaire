{% extends 'base.html.twig' %}

{% block title %}Fillier index{% endblock %}

{% block body %}
<div class="container-fluid">

   <div class="card">
    <div class="card-header">
        <h3 class="card-title mb-0">Filliers</h3>
    </div>
    <div class="card-body">
        <table id="scroll-horizontal" class="table nowrap align-middle card-li table-datatable" style="width:100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Promotion</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for fillier in filliers %}
            <tr>
                <td>{{ fillier.id }}</td>
                <td>{{ fillier.nom }}</td>
                <td>20{{ fillier.promotion.annee|date("y") }}</td>
                <td>
                    <div class="dropdown d-inline-block">
                        <button class="btn btn-soft-secondary btn-sm dropdown" type="button"
                                data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="ri-more-fill align-middle"></i>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end">

                            <li><a href="{{ path('app_fillier_edit', {'id': fillier.id}) }}" class="dropdown-item edit-item-btn"><i
                                            class="ri-pencil-fill align-bottom me-2 text-muted"></i> Editer</a>
                            </li>
                        </ul>
                    </div>

                </td>

            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
   </table>
        </div>
    </div>
    </div>

    {{ encore_entry_script_tags('datatable') }}
{% endblock %}
